<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Default">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#d0d0d0" background="#151515"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#b0b0b0"/>
  <style name="CurrentLine" background="#505050"/>
  <style name="LineNumber" foreground="#505050"/>
  <style name="CurrentLineNumber" foreground="#b0b0b0" bold="true"/>
  <style name="SearchResult" background="202020"/>
  <style name="Parentheses" background="#303030" />

  <!-- ??? -->
  <style name="SearchScope" foreground="#000000" background="#ffffff"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#505050"/>
  <style name="Occurrences.Rename" background="#b0b0b0"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#d28445"/>

  <!-- language primitives -->
  <style name="Number" foreground="#d28445"/>
  <style name="String" foreground="#90a959"/>
  <style name="Keyword" foreground="#aa759f"/>
  <style name="Operator" foreground="#d0d0d0"/>
  <style name="Preprocessor" foreground="#6a9fb5"/>
  <style name="Label" foreground="#ac4142"/>

  <!-- types, classes -->
  <style name="Type" foreground="#f4bf75"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#6a9fb5"/>
  <style name="VirtualMethod" foreground="#6a9fb5" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#e0e0e0"/>
  <style name="Local" foreground="#d0d0d0"/>
  <style name="Static" foreground="#d0d0d0"/>
  <style name="JsScopeVar" foreground="#d0d0d0" italic="true"/>
  <style name="JsImportVar" foreground="#d0d0d0" italic="true"/>
  <style name="JsGlobalVar" foreground="#d0d0d0" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#303030"/>

  <!-- comments -->
  <style name="Comment" foreground="#505050"/>
  <style name="DisabledCode" foreground="#505050"/>
  <style name="Doxygen.Comment" foreground="#505050"/>
  <style name="Doxygen.Tag" foreground="#505050"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#aa759f"/>
  <style name="Binding" foreground="#ac4142"/>
  <style name="QmlExternalId" foreground="#6a9fb5" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#6a9fb5" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#aa759f"/>
  <style name="DiffLocation" foreground="#6a9fb5"/>
  <style name="AddedLine" foreground="#90a959"/>
  <style name="RemovedLine" foreground="#f4bf75"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#aa759f"/>
  <style name="DiffContextLine" foreground="#6a9fb5"/>
  <style name="DiffSourceLine" foreground="#90a959"/>
  <style name="DiffSourceChar" foreground="#f4bf75" background="#202020"/>
  <style name="DiffDestLine" foreground="#90a959"/>
  <style name="DiffDestChar" foreground="#f4bf75" background="#202020"/>
</style-scheme>
